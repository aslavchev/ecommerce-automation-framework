<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="E-Commerce Automation Suite" verbose="1">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Login Tests" preserve-order="true">
        <classes>
            <class name="io.github.aslavchev.LoginTests"/>
        </classes>
    </test>
    <test name="Product Tests" preserve-order="true">
        <classes>
            <class name="io.github.aslavchev.ProductTests"/>
        </classes>
    </test>
    <test name="Cart Tests" preserve-order="true">
        <classes>
            <class name="io.github.aslavchev.CartTests"/>
        </classes>
    </test>
    <test name="API Tests" preserve-order="true">
        <classes>
            <class name="io.github.aslavchev.api.ProductAPITests"/>
            <class name="io.github.aslavchev.api.SearchAPITests"/>
            <class name="io.github.aslavchev.api.AuthAPITests"/>
        </classes>
    </test>
</suite>